<!-- Форма поиска по статьям -->
 <div class="wrapper search">
          <%= form_tag articles_path, method: 'get' do %>
            <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search" %>
            <% end %>
  </div>

<!-- Вывод всех статей -->
<h1> Listing Articles </h1>

<% @articles.each do |article| %>

<div class="small_block">
	<%= image_tag article.user.avatar.attached? ? article.user.avatar :  "index.png", class: "avatar small" %>
	<%= article.user.name %>
</div>

		<p><h4><%= article.title %></h4></p>
		<p><%= article.text %></p>
		<%= link_to 'Show ', article_path(article) %>

		<% if article.user == current_user %>
		<%= link_to 'Edit ', edit_article_path(article) %>
		<%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
        <% end %>

<% end %>

<% if current_user %>
	<h4><p>Would you like to leave your post?</p>
	<%= link_to 'Create article', new_article_path %></h4>
<% end %>

<%= will_paginate(@articles) %>

