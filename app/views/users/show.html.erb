<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
     	<%= image_tag @user.avatar.attached? ? @user.avatar : "index.png", class: "avatar" %>
        <p><b>Name:</b> <%= @user.name %></p>
        <p><b>E-mail:</b> <%= @user.email %></p>
      </h1>
    </section>
  </aside>
</div>